<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ustora Demo</title>

    <!-- Google Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,200,300,700,600' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,700,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,100' rel='stylesheet' type='text/css'>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/ShopOnline/css/bootstrap.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/ShopOnline/css/font-awesome.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/ShopOnline/css/owl.carousel.css">
    <link rel="stylesheet" href="~/ShopOnline/style.css">
    <link rel="stylesheet" href="~/ShopOnline/css/responsive.css">
</head>
<body>
    <div class="header-area">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="user-menu">
                        <ul>
                            <li><a href="@Url.Action("Index","Home")"><i class="fa fa-home" aria-hidden="true"></i>Home</a></li>
                            <li><a href="@Url.Action("Index", "GioHang")"><i class="fa fa-user"></i> My Cart</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-6">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div> <!-- End header area -->
    <div>
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
