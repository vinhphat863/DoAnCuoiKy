@model IEnumerable<MobileShopConnection.v_ChiTietDonHang>
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminMainLayout.cshtml";
    double? TongTien = 0;
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <tr>
                        <th>
                            Hình Ảnh
                        </th>
                        <th>
                            Tên Sản Phẩm
                        </th>
                        <th>
                            Số Lượng
                        </th>
                        <th>
                            Đơn Giá
                        </th>
                        <th>
                            Thành Tiền
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        TongTien = TongTien + item.SoLuong * item.DonGia;
                        <tr>
                            <td>
                                <img src="~/ShopOnline/img/@item.HinhAnh" width="100" height="100"/>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenSP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoLuong)
                            </td>
                            <td>
                                @string.Format("{0:N0}", item.DonGia) đ
                            </td>
                            <td>
                                @string.Format("{0:N0}", item.DonGia * item.SoLuong) đ
                            </td>
                        </tr>
                    }
                    <tr>
                        <td colspan="5">
                            <b>Tổng Tiền : @string.Format("{0:N0}", TongTien)</b>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <!-- /.row -->
</div>
