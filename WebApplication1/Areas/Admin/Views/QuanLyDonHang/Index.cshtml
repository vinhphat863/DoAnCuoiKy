@model PetaPoco.Page<MobileShopConnection.v_DonHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminMainLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <tr>
                        <th>
                            Mã
                        </th>
                        <th>
                            Mã Tài Khoản
                        </th>
                        <th>
                            Ngày Thanh Toán
                        </th>
                        <th>
                            Tình Trạng
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaDonHang)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaTK)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayThanhToan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenTinhTrang)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.MaDonHang }) |
                                @Html.ActionLink("Details", "Details", new { id = item.MaDonHang })
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <div class="text-center">
                <ul class="pagination">
                    @{
                        if (Model.CurrentPage > 1)
                        {
                            <li>
                                <a href="@Url.Action("Index","QuanLyDonHang",new { Page = Model.CurrentPage - 1})" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                        }
                    }
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        if (i == Model.CurrentPage)
                        {
                            <li class="active">@Html.ActionLink(i.ToString(), "QuanLyDonHang", new { Page = i })</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink(i.ToString(), "QuanLyDonHang", new { Page = i })</li>
                        }
                    }
                    @{
                        if (Model.CurrentPage < Model.TotalPages)
                        {
                            <li>
                                <a href="@Url.Action("Index","QuanLyDonHang",new { Page = Model.CurrentPage + 1})" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
    <!-- /.row -->
</div>

